{
  "name": "bookmarklet-agent",
  "version": "1.0.0",
  "description": "A bookmarklet that loads an AI agent for web page interaction",
  "type": "module",
  "main": "dist/agent.js",
  "scripts": {
    "build": "node build.js",
    "build:dev": "esbuild src/agent.ts --bundle --outfile=dist/agent.js --format=iife --sourcemap",
    "watch": "node watch.js",
    "deploy": "fly deploy"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "esbuild": "^0.19.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "marked": "^16.1.2"
  }
}
